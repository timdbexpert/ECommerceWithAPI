@model ECommerce_MVC.Areas.Admin.ViewModel.SubMenuViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Edit Submenu</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuId" class="control-label"></label>
                <select id="menu" asp-for="MenuId" class="form-control">
                    <option selected="true" disabled="disabled">Choose Menu</option>
                </select><br />
                <span asp-validation-for="MenuId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $.ajax({
                  type: "GET",
                url: "/Admin/SubMenu/GetAllMenu",
                success: function (response) {
                    for (let f of response) {
                        $("#menu").append(`<option value=${f.id}>${f.name}</option>`)
                    }
                }
            })
        });
    </script>
}
